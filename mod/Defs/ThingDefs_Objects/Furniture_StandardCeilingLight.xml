<Defs>
    <ThingDef Name="Visible_Ceiling_Lamp_Base" ParentName="LampBase" Abstract="True">
        <defName>VisibleCeilingLamp_Base</defName>
        <label>Standard Ceiling Light Base Definition.</label>
        <description>Help, I'm trapped in the coding factory! If you can read this, tell the mod author!</description>
        <fillPercent>0</fillPercent>
        <passability>Standable</passability>
        <blockWind>false</blockWind>
        <clearBuildingArea>false</clearBuildingArea>
        <tickerType>Rare</tickerType>
        <altitudeLayer>Blueprint</altitudeLayer>
        <selectable>true</selectable>
        <building>
            <ai_chillDestination>false</ai_chillDestination>
            <isInert>true</isInert>
            <isEdifice>false</isEdifice>
        </building>
        <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
        <graphicData>
            <color>(1.0,1.0,1.0,0.7)</color>
            <shaderType>Transparent</shaderType>
        </graphicData>
        <statBases>
            <WorkToBuild>375</WorkToBuild>
            <Mass>3.5</Mass>
            <Flammability>0</Flammability>
        </statBases>
        <researchPrerequisites>
            <li>Electricity</li>
        </researchPrerequisites>
        <minifiedDef>MinifiedThing</minifiedDef>
        <castEdgeShadows>false</castEdgeShadows>
        <pathCost>0</pathCost>
        <drawerType>RealtimeOnly</drawerType>
        <blockLight>false</blockLight>
        <holdsRoof>false</holdsRoof>
        <constructEffect>ConstructMetal</constructEffect>
    </ThingDef>

    <ThingDef ParentName="Visible_Ceiling_Lamp_Base">
        <defName>VisibleCeilingLight</defName>
        <label>Ceiling Lamp</label>
        <description>A hanging lamp used to light an area. Leaves the ground free for your stockpiles and work benches!</description>
        <graphicData>
            <texPath>standard-ceiling-light</texPath>
        </graphicData>
        <uiIconPath>ui_standard-ceiling-light</uiIconPath>
                <comps>
            <li Class="CompProperties_Glower">
                <glowRadius>12</glowRadius>
                <glowColor>(217,217,208,0)</glowColor>
            </li>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <shortCircuitInRain>true</shortCircuitInRain>
                <basePowerConsumption>20</basePowerConsumption>
            </li>
            <li Class="CompProperties_Flickable"/>
            <!-- <li Class="Merthsoft.AutoOnAutoOff.CompProperties.ProximityPower">
                <checkRate>100</checkRate>
                <autoOn>true</autoOn>
                <autoOff>true</autoOff>
                <showOverrideButton>true</showOverrideButton>
            </li> -->
        </comps>
        <costList>
            <Steel>15</Steel>
        </costList>
    </ThingDef>
